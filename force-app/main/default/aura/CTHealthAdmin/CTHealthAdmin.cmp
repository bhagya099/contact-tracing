<aura:component implements="force:appHostable">
    <aura:attribute name="handlerTitle" type="String" default="Person View" />
    <aura:attribute name="scope" type="String" default="person" />
    <div class="container">
        <lightning:layout multipleRows="true">

            <lightning:layoutItem size="12">
                <c:CTHealthHeader />
            </lightning:layoutItem>
            <lightning:layoutItem size="12">
                <lightning:tabset onselect="{!c.tabSelectHandler}" variant="vertical">
                    <lightning:tab label="Person View" id="person_view">
                        Person View
                    </lightning:tab>
                    <lightning:tab label="Location View" id="location_view">
                        Location View
                    </lightning:tab>
                </lightning:tabset>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>